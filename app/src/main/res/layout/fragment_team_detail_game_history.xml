<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srf_fragment_team_detail_game_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_team_detail_game_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/pb_fragment_team_detail_game_history"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:indeterminateTint="@color/tertiary_text"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tv_fragment_team_detail_game_history_no_games"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:gravity="center"
        android:textColor="@color/tertiary_text"
        android:text="@string/fragment_team_detail_game_history_no_games"/>

</FrameLayout>